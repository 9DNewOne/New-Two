<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asus.onequickly.view.activity.showreelActivity">

    <ImageView
        android:id="@+id/userBackground"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@mipmap/drawerlayout_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="35dp"
            android:src="@mipmap/rawback" />

        <TextView
            android:layout_width="82dp"
            android:layout_height="45dp"
            android:layout_marginLeft="146dp"
            android:layout_marginStart="146dp"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="MC  跨足令"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="307dp"
            android:layout_marginStart="307dp"
            android:layout_marginTop="35dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="340dp"
            android:layout_marginStart="340dp"
            android:layout_marginTop="35dp" />


    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="140dp"
        android:background="@color/colorWhile"
        android:radius="100dp"
        fresco:roundAsCircle="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_marginLeft="98dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="172dp"
        android:background="@drawable/attention_bg"
        android:text="+关注"
        android:textColor="@color/colorPrimaryDark" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/userShowReel"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />
</RelativeLayout>
