<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.onequickly.view.fragment.Recommendfragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/Tab"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:tabIndicatorColor="@color/colorWhile"
            app:tabIndicatorHeight="4dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorWhile"
            app:tabTextColor="@color/colorWhile" />


        <android.support.v4.view.ViewPager
            android:id="@+id/RecommendPager"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/Tab" />
    </RelativeLayout>


</FrameLayout>
