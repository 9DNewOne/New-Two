<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_margin="@dimen/x16"
            android:id="@+id/hot_fine_food_follow_list_icon"
            fresco:roundAsCircle="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_launcher_round"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24" />
        <LinearLayout
            android:layout_toLeftOf="@+id/hot_food_follow_right"
            android:layout_toRightOf="@+id/hot_fine_food_follow_list_icon"
            android:layout_margin="@dimen/x16"
            android:orientation="vertical"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x50">
            <TextView
                android:layout_weight="1"
                android:id="@+id/hot_food_follow_name"
                android:text="asdasdsadsadsa"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/hot_food_follow_description"
                android:text="aaaaaaaaaaaa"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/x16"
            android:id="@+id/hot_food_follow_right"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x50">
            <TextView
                android:layout_toLeftOf="@+id/hot_food_inicon"
                android:gravity="center"
                android:id="@+id/hot_food_follow_createtime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="asd"
                />
            <ImageView
                android:id="@+id/hot_food_inicon"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/x16"
                android:gravity="center"
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/x24"
                android:background="@drawable/raw_"
                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
