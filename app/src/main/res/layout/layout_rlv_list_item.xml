<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x8"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rlv_list_userIcon"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginStart="@dimen/x16"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginStart="@dimen/x16"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rlv_list_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textColor="#E51C23"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/rlv_list_posted_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x3"
                android:text="发表时间"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/rlv_menu"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40"
            android:layout_marginEnd="@dimen/y16"
            android:layout_marginRight="@dimen/y16"
            android:src="@mipmap/ic_launcher_round" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/y16"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/y16"
        android:layout_marginStart="@dimen/x16"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="天气美美的，适合郊游"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/publish_Img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y150"
            android:layout_marginTop="6dp"
            android:src="@mipmap/drawerlayout_background" />

    </LinearLayout>
</LinearLayout>